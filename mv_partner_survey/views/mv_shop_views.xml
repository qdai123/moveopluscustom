<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mv_shop_form" model="ir.ui.view">
        <field name="name">mv.shop.form</field>
        <field name="model">mv.shop</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_survey_id"/>
                        <field name="name"/>
                        <field name="street"/>
                        <field name="country_id"/>
                        <field name="state_id"/>
                        <field name="district_id"/>
                        <field name="wards_id"/>
                        <field name="address" invisible="1"/>
                    </group>
                    <group>
                        <field name="square_meter"/>
                        <field name="brand_id"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mv_shop_tree" model="ir.ui.view">
        <field name="name">mv.shop.tree</field>
        <field name="model">mv.shop</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_survey_id" optional="hidden"/>
                <field name="name"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="district_id"/>
                <field name="wards_id"/>
                <field name="address" optional="hidden"/>
                <field name="square_meter"/>
                <field name="brand_id"/>
            </tree>
        </field>
    </record>

