<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mv_dms_region_form_view" model="ir.ui.view">
        <field name="name">mv_dms.world.area.form</field>
        <field name="model">mv.world.area</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="area_name" class="fw-bold" string="Tên"/>
                <field name="area_code" string="Mã" optional="show"/>
                <field name="area_type" string="Loại"/>
                <field name="parent_id" string="Thuộc châu lục" optional="show"/>
                <field name="country_ids" widget="many2many_tags" string="Quốc gia" optional="hidden"/>
            </tree>
        </field>
    </record>

    <record id="mv_dms_region_tree_view" model="ir.ui.view">
        <field name="name">mv_dms.world.area.tree</field>
        <field name="model">mv.world.area</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="area_name" class="fw-bold" string="Tên"/>
                <field name="area_code" string="Mã" optional="show"/>
                <field name="area_type" string="Loại"/>
                <field name="parent_id" string="Thuộc châu lục" optional="show"/>
                <field name="country_ids" widget="many2many_tags" string="Quốc gia" optional="hidden"/>
            </tree>
        </field>
    </record>

    <record id="mv_dms_region_search_view" model="ir.ui.view">
        <field name="name">mv_dms.world.area.search</field>
        <field name="model">mv.world.area</field>
        <field name="arch" type="xml">
            <search>
                <field name="area_name" string="Tên khu vực" filter_domain="['|', ('area_name', 'ilike', self), ('area_code', 'ilike', self)]"/>
                <field name="country_ids" string="Quốc gia" filter_domain="[('country_ids', 'ilike', self)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Loại khu vực" name="group_by_area_type" context="{'group_by': 'area_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_view_region" model="ir.actions.act_window">
        <field name="name">Vùng địa lý</field>
        <field name="res_model">mv.world.area</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" ref="mv_dms_world_area_tree_view"/>
        <field name="search_view_id" ref="mv_dms_world_area_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create new World Area
            </p>
        </field>
    </record>
</odoo>
