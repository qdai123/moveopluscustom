<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mv_discount_partner_form_view" model="ir.ui.view">
		<field name="name">mv.discount.partner.form</field>
		<field name="model">mv.discount.partner</field>
		<field name="arch" type="xml">
			<form string="Discount Partner FORM">
				<field name="needs_update" invisible="True"/>
				<sheet>
					<group>
						<group>
							<field name="partner_id" options="{'no_open': True}"/>
							<field name="partner_agency" invisible="True"/>
							<field name="partner_white_agency" invisible="True"/>
							<field name="level"/>
						</group>
						<group>
							<field name="date"/>
							<field string="Chiết khấu Đại lý" name="parent_id" readonly="True" options="{'no_open': True}"/>
							<field string="Chiết Khấu Kích Hoạt Bảo Hành" name="warranty_discount_policy_ids" readonly="True" widget="many2many_tags" options="{'no_open': True}"/>
							<field string="Chiết Khấu Giảm Giá" name="discount_policy_ids" readonly="True" widget="many2many_tags" options="{'no_open': True}"/>
						</group>
						<group>
							<field name="min_debt"/>
							<field name="max_debt"/>
							<field name="number_debt"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>
