<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record model="ir.ui.view" id="mv_discount_policy_tree_view">
		<field name="name">mv_sale.mv.discount.policy.tree</field>
		<field name="model">mv.discount.policy</field>
		<field name="arch" type="xml">
			<tree duplicate="false" import="false" export_xlsx="false" decoration-muted="policy_status == 'close'">
				<field name="policy_name" string="Chính sách"/>
				<field name="policy_type" string="Loại chính sách" column_invisible="1"/>
				<field name="date_from" string="Ngày bắt đầu"/>
				<field name="date_to" string="Ngày kết thúc"/>
				<field name="policy_status"
				       string="Trạng thái"
				       widget="badge"
				       decoration-info="policy_status == 'open'"
				       decoration-primary="policy_status == 'applying'"
				       decoration-muted="policy_status == 'close'"/>
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="mv_discount_policy_form_view">
		<field name="name">mv_sale.mv.discount.policy.form</field>
		<field name="model">mv.discount.policy</field>
		<field name="arch" type="xml">
			<form duplicate="false">
				<header>
					<field name="can_access" invisible="True"/>
					<button class="btn btn-primary" name="action_apply" type="object" string="Áp dụng" invisible="not id or (can_access and policy_status != 'open') or not can_access"/>
					<button class="btn btn-primary" name="action_close" type="object" string="Kết thúc" invisible="not id or (can_access and policy_status in ['open', 'close']) or not can_access"/>
					<button class="btn btn-secondary" name="action_reset_to_open" type="object" string="Mở lại chính sách" invisible="not id or (can_access and policy_status != 'close') or not can_access"/>
					<field name="policy_status" widget="statusbar" statusbar_visible="open"/>
				</header>
				<sheet>
					<field name="active" invisible="True"/>
					<widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
					<div class="oe_title pe-0">
                        <h1 class="d-flex justify-content-between align-items-center">
                            <div class="d-flex w-100">
                                <field name="policy_name" widget="text" class="text-truncate" readonly="policy_status in ['applying', 'close']"/>
                            </div>
                        </h1>
                    </div>
					<group>
						<group>
							<field name="date_from" string="Bắt đầu" readonly="policy_status in ['applying', 'close']"/>
						</group>
						<group>
							<field name="date_to" string="Kết thúc" readonly="policy_status in ['applying', 'close']"/>
						</group>
					</group>
					<notebook>
						<page string="Cấu hình số lượng" name="page_level_qty_config">
							<field mode="tree" name="policy_level_quantity_ids" nolabel="1" readonly="policy_status in ['applying', 'close']" context="{'default_policy_id': id}">
								<tree editable="bottom" default_order="level">
									<field name="policy_id" column_invisible="1"/>
									<field name="name" optional="hidden"/>
									<field name="level" string="Cấp bậc"/>
									<field name="quantity_min" string="S/L Tối thiểu"/>
									<field name="quantity_max" string="S/L Tối đa"/>
								</tree>
							</field>
						</page>
						<page string="Cấu hình sản phẩm" name="page_product_config">
							<field mode="tree" name="policy_product_level_ids" nolabel="1" readonly="policy_status in ['applying', 'close']" context="{'default_policy_id': id}">
								<tree editable="bottom" default_order="product_id">
									<field name="policy_id" column_invisible="1"/>
									<field name="company_currency_id" column_invisible="1"/>
									<field name="product_id" string="Sản phẩm áp dụng" widget="many2one_barcode" context="{'default_detailed_type': 'product'}" options="{'no_open': True, 'no_create_edit': True}"/>
									<field name="product_template_id" column_invisible="1"/>
									<field name="product_custom_attribute_value_ids" widget="many2many_tags" options="{'no_open': True, 'no_create_edit': True}" column_invisible="1"/>
									<field name="product_no_variant_attribute_value_ids" widget="many2many_tags" options="{'no_open': True, 'no_create_edit': True}" column_invisible="1"/>
									<field name="price_level_0" string="Cấp 0" readonly="not product_id"/>
									<field name="price_level_1" string="Cấp 1" readonly="not product_id or price_level_0 &lt; 0"/>
									<field name="price_level_2" string="Cấp 2" readonly="not product_id or price_level_1 &lt; 0"/>
									<field name="price_level_3" string="Cấp 3" readonly="not product_id or price_level_2 &lt; 0"/>
									<field name="price_level_4" string="Cấp 4" readonly="not product_id or price_level_3 &lt; 0"/>
								</tree>
							</field>
						</page>
						<page string="Khách hàng / Đại lý" name="page_partner_retailer_config">
							<button name="load_partners" string="Làm mới" type="object" class="btn-link mb-1 px-0" icon="fa-refresh" invisible="policy_status in ['applying', 'close']"/>
							<field name="mv_partner_ids" nolabel="1" context="{'default_discount_policy_ids': active_ids}" readonly="1">
								<tree default_order="level" delete="false" limit="80">
									<field name="partner_id" string="Đại lý" options="{'no_open': True}"/>
									<field name="date" string="Ngày hiệu lực"/>
									<field name="level" string="Cấp bậc"/>
									<field name="min_debt" optional="hidden"/>
									<field name="max_debt" optional="hidden"/>
									<field name="number_debt" optional="hidden"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="mv_discount_policy_search_view">
		<field name="name">mv_sale.mv.discount.policy.search</field>
		<field name="model">mv.discount.policy</field>
		<field name="arch" type="xml">
			<search>
				<field name="policy_name" string="Chính sách"/>
				<filter string="Current Year" name="filter_current_year" domain="[('date_from', '&gt;=', (context_today()).strftime('%Y-01-01')), ('date_from', '&lt;', (context_today() + relativedelta(years=1)).strftime('%Y-01-01'))]"/>
				<separator/>
				<filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
			</search>
		</field>
	</record>

	<record id="mv_discount_policy_action_view" model="ir.actions.act_window">
		<field name="name">Cấu hình chiết khấu giảm giá</field>
		<field name="res_model">mv.discount.policy</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="mv_discount_policy_tree_view"/>
		<field name="search_view_id" ref="mv_discount_policy_search_view"/>
		<field name="context">{'search_default_filter_current_year': 1}</field>
	</record>
</odoo>
