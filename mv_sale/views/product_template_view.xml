<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Adding the new field inside the General Information page -->
            <xpath expr="//field[@name='create_repair']" position="after">
                <field name="is_promotion"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_very_simple_tree_view" model="ir.ui.view">
        <field name="name">mv_sale.product.template.very.simple.tree</field>
        <field name="model">product.template</field>
        <field name="priority" eval="13" />
        <field name="arch" type="xml">
            <tree string="Product" create="false" edit="false" delete="false">
                <field name="name" string="Sản phẩm"/>
            </tree>
        </field>
    </record>
</odoo>
